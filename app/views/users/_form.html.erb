<%= form_with(model: @user, local: true) do |f| %>
  <div class="form-group">
      <%= f.text_field :firstname, class:"form-control", placeholder:"Firstname" %>
  </div>
  <div class="form-group">
      <%= f.text_field :lastname, class:"form-control", placeholder:"Lastname" %>
  </div>
  <% if action_name == 'edit' %>
    <div class="form-group">
        <%= f.hidden_field :email%>
    </div>
  <% else %>
    <div class="form-group">
        <%= f.email_field :email, class:"form-control", placeholder:"Email" %>
    </div>
  <% end %>
  <div class="form-group">
      <%= f.label :birthday, "Birthday" %>
      <%= f.date_field :birthday, class:"form-control" %>
  </div>
  <div class="form-group">
      <div><%= f.label "Gender" %></div> 
      <div class="form-check form-check-inline">
          <%= f.radio_button :gender, "male", checked: true%> 
          <%= f.label "Male", class:"form-check-label" %>
      </div>
      <div class="form-check form-check-inline">
          <%= f.radio_button :gender, "female" %> 
          <%= f.label "Female", class:"form-check-label" %>
      </div>
  </div>
  <% if action_name == 'edit' %>
    <div class="form-group">
        <%= f.password_field :password, class:"form-control", placeholder:"New Password" %>
    </div>
    <div class="form-group">
        <%= f.password_field :password_confirmation, class:"form-control", placeholder:"Confirm New Password" %>
    </div>
  <% else %>
     <div class="form-group">
        <%= f.password_field :password, class:"form-control", placeholder:"Password" %>
    </div>
    <div class="form-group">
        <%= f.password_field :password_confirmation, class:"form-control", placeholder:"Confirm Password" %>
    </div> 
  <% end %>
  <div class="text-center">
      <%= f.submit "Submit", class:"btn btn-primary" %>
  </div>
<% end %>