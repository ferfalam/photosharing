<div class="container my-2">
    <div class="row">
        <div class="col col-md-6 d-flex align-self-center">
            <div class="company-text">
                <h2 class="font-weight-bold text-primary">friends connection</h2>
                <p>Be connect with your friends with friends connection, do post and share picture</p>
                <% if @user.errors.any? %> 
                    <div class="text-danger"> 
                        <ul> 
                            <% @user.errors.full_messages.each do |message| %> 
                                <li><%= message %></li> 
                            <% end %> 
                        </ul> 
                    </div> 
                <% end %> 
            </div>
        </div>
        <div class="col col-md-6 form">
            <%= render 'form' %>
        </div>
    </div>
</div>
