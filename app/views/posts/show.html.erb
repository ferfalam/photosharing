<div class="container my-2">
    <div class="card" style="width: 100%;">
        <%= image_tag @post.image.url, class:"card-img-top" %>
        <div class="card-body">
            <% unless @post.user_id == current_user.id %>
                <% if current_user.favorites.find_by(post_id: @post.id).present? %>
                    <%= link_to "", favorite_path(@post.id), method: :delete, class:"fa fa-heart favorite"%>   
                <% else %>
                    <%= link_to "", favorites_path(@post.id), method: :post, class:"fa fa-heart-o favorite"%>   
                <% end %>
            <% end %>
            <p class="card-text"><%=@post.content%></p>
            
            <% if @post.user_id == current_user.id %>
                <%= link_to 'Edit', edit_post_path(@post),class:"btn btn-warning mr-3" %> 
                <%= link_to "Delete", post_path(@post),class:"btn btn-danger mr-3", method: "delete", data:{ confirm: "Are you sure ?" } %>
            <% end %>
            
            <p class="author">By <b><%= @post.user.firstname+" "+@post.user.lastname%></b> </p>
        </div>
    </div>
</div>