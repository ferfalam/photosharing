
<div class="container my-2">
    <div class="row">
        <div class="col col-md-6 d-flex align-self-center">
            <div class="company-text">
                <h2 class="font-weight-bold text-primary">Photo Sharing</h2>
                <p>Be with your friends by sharing photos of what you are doing</p>
                
                <% if notice.present? %>
                    <%= content_tag(:div, notice, class:"alert alert-danger" ) %>
                <% end %>
            </div>
        </div>
        <div class="col col-md-6 form">
            <%= form_with(scope: :session,local: true, url: sessions_path) do |f| %>
                <div class="form-group">
                    <%= f.email_field :email, class:"form-control", placeholder:"Email" %>
                </div>
                <div class="form-group">
                    <%= f.password_field :password, class:"form-control", placeholder:"Password" %>
                </div>
                <div class="text-center">
                    <%= f.submit "Submit", class:"btn btn-primary" %>
                </div>
            <% end %>
        </div>
    </div>
</div>
